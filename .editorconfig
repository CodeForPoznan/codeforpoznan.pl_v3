root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

# Set default charset
[*.{js,vue,py}]
charset = utf-8
indent_style = space

[*.py]
indent_size = 4

[*.{js,vue}]
indent_size = 2

[Makefile]
indent_style = tab
tab_width = 4

[{package.json,.travis.yml}]
indent_style = space
indent_size = 2
